{
  "manifest_version": 2,
  "name": "PhishFort | Protect",
  "short_name": "PhishFort | Protect",
  "description": "Protect against phishing attacks targeting crypto users.",
  "version": "0.0.4.3",
  "author": "PhishFort",
  "browser_action": {
    "default_icon": "img/tab-icon.png",
    "default_title": "PhishFort | Protect",
    "default_popup": "html/index.html"
  },
  "icons": {
    "128": "img/tab-icon.png"
  },
  "background": {
    "scripts": [
      "js/jquery-3.3.1.min.js",
      "js/background.js"
    ]
  },
  "web_accessible_resources": [
    "html/warning.html"
  ],
  "content_security_policy": "script-src 'self' https://www.google.com https://www.gstatic.com; object-src 'self';",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}